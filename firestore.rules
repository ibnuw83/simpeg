rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to write to any document.
    // This is permissive for the initial data migration.
    // TODO: Secure these rules further based on application logic.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
